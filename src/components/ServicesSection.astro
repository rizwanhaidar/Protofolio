---
import { services } from '../data/services';
---

<section class="flex flex-col gap-6">
  <div class="flex items-center justify-between">
    <div>
      <p class="eyebrow">Consulting</p>
      <h2 class="text-2xl font-semibold text-[var(--ink)] md:text-3xl">How I can help</h2>
      <p class="text-[var(--muted)]">Short engagements or longer builds tailored to your data roadmap.</p>
    </div>
  </div>
  <div class="grid gap-4 md:grid-cols-3">
    {services.map((item) => (
      <article class="card flex flex-col gap-3 p-5">
        <h3 class="text-lg font-semibold text-[var(--ink)]">{item.title}</h3>
        <p class="text-[var(--muted)] leading-relaxed">{item.detail}</p>
      </article>
    ))}
  </div>
</section>
