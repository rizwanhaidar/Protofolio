---
import { experience } from '../data/experience';
---

<section class="flex flex-col gap-6" id="experience">
  <div>
    <p class="text-sm font-semibold text-blue-600 uppercase tracking-wide mb-2">Professional Experience</p>
    <h2 class="text-2xl font-bold text-slate-900 md:text-3xl mb-2">Career Timeline</h2>
    <p class="text-slate-600">Delivering data engineering solutions across consulting, healthcare, and public sector</p>
  </div>
  
  <div class="relative">
    <!-- Timeline line -->
    <div class="hidden md:block absolute left-6 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-200 via-blue-300 to-blue-100"></div>
    
    <div class="flex flex-col gap-6">
      {experience.map((item, index) => (
        <article class="relative pl-0 md:pl-16">
          <!-- Timeline dot -->
          <div class="hidden md:block absolute left-4 top-6 w-5 h-5 bg-blue-600 rounded-full border-4 border-white shadow-md"></div>
          
          <div class="bg-white rounded-xl border border-slate-200 p-6 hover:shadow-xl hover:border-blue-300 hover:-translate-y-1 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-3 mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <h3 class="text-lg font-bold text-slate-900">{item.role}</h3>
                  {index === 0 && (
                    <span class="px-2.5 py-0.5 bg-blue-100 text-blue-700 text-xs font-bold rounded-full shadow-sm">Primary</span>
                  )}
                </div>
                <p class="text-base font-semibold text-blue-600 mb-1">{item.org}</p>
                <p class="text-sm text-slate-500 font-medium">{item.timeframe}</p>
              </div>
            </div>
            <p class="text-slate-700 leading-relaxed mb-4">{item.impact}</p>
            
            {/* Awards for Teradata role */}
            {index === 0 && (
              <div class="pt-4 border-t border-slate-200/60">
                <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-3">Recognition & Awards</p>
                <div class="flex flex-wrap gap-2">
                  <div class="px-3 py-1.5 bg-amber-50 text-amber-700 text-xs font-semibold rounded-lg border border-amber-200 flex items-center gap-1.5">
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                    Q1 2024 Quarterly Excellence
                  </div>
                  <div class="px-3 py-1.5 bg-purple-50 text-purple-700 text-xs font-semibold rounded-lg border border-purple-200 flex items-center gap-1.5">
                    <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
