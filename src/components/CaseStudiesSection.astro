---
import { caseStudies } from '../data/caseStudies';
---

<section class="flex flex-col gap-6" id="case-studies">
  <div>
    <p class="text-sm font-semibold text-blue-600 uppercase tracking-wide mb-2">Key Projects</p>
    <h2 class="text-2xl font-bold text-slate-900 md:text-3xl mb-2">Impact & Achievements</h2>
    <p class="text-slate-600">Quantifiable results across Fortune 500, healthcare, and public sector</p>
  </div>
  
  <div class="grid gap-6 md:grid-cols-2">
    {caseStudies.map((item, index) => (
      <article class="bg-white rounded-xl border border-slate-200 hover:border-blue-300 hover:shadow-xl transition-all overflow-hidden group" aria-labelledby={`case-${item.title.replace(/\s+/g, '-').toLowerCase()}`}>
        <!-- Header with gradient -->
        <div class="bg-gradient-to-br from-blue-50 to-slate-50 p-5 border-b border-slate-200">
          <h3 id={`case-${item.title.replace(/\s+/g, '-').toLowerCase()}`} class="text-lg font-bold text-slate-900 mb-2 leading-tight">{item.title}</h3>
          <div class="flex items-center justify-between">
            <p class="text-sm font-semibold text-blue-600">{item.role}</p>
            <p class="text-xs text-slate-500 font-medium">{item.timeframe.split('â€¢')[0].trim()}</p>
          </div>
        </div>
        
        <!-- Content -->
        <div class="p-5">
          <!-- Tech Stack -->
          <div class="mb-4">
            <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Tech Stack</p>
            <div class="flex flex-wrap gap-1.5">
              {item.stack.map((tag) => (
                <span class="px-2.5 py-1 bg-slate-100 text-slate-700 text-xs font-medium rounded-md border border-slate-200" aria-label={`Technology: ${tag}`}>{tag}</span>
              ))}
            </div>
          </div>
          
          <!-- Achievements -->
          <ul class="flex flex-col gap-2.5 text-sm text-slate-700">
            {item.bullets.map((bullet) => (
              <li class="flex gap-2 leading-relaxed">
                <span class="flex-shrink-0">{bullet}</span>
              </li>
            ))}
          </ul>
        </div>
      </article>
    ))}
  </div>
</section>
