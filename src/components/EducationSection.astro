---
import { education } from '../data/education';
---

<section class="flex flex-col gap-6" id="education">
  <div>
    <p class="text-sm font-semibold text-blue-600 uppercase tracking-wide mb-2">Education</p>
    <h2 class="text-2xl font-bold text-slate-900 md:text-3xl mb-2">Academic Foundation</h2>
    <p class="text-slate-600">Computer science education with specialization in data systems and analytics</p>
  </div>
  
  <div class="relative">
    <!-- Timeline line -->
    <div class="hidden md:block absolute left-6 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-200 via-blue-300 to-blue-100"></div>
    
    <div class="flex flex-col gap-6">
      {education.map((item, index) => (
        <article class="relative pl-0 md:pl-16">
          <!-- Timeline dot -->
          <div class="hidden md:block absolute left-4 top-6 w-5 h-5 bg-blue-600 rounded-full border-4 border-white shadow-md"></div>
          
          <div class="bg-white rounded-xl border border-slate-200 p-6 hover:shadow-xl hover:border-blue-300 hover:-translate-y-1 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-3 mb-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <h3 class="text-lg font-bold text-slate-900">{item.title}</h3>
                  {index === 0 && (
                    <span class="px-2.5 py-0.5 bg-green-100 text-green-700 text-xs font-bold rounded-full shadow-sm">In Progress</span>
                  )}
                </div>
                <p class="text-base font-semibold text-blue-600 mb-1">{item.place}</p>
                <p class="text-sm text-slate-500 font-medium">{item.timeframe}</p>
              </div>
            </div>
            <p class="text-slate-700 leading-relaxed">{item.detail}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
